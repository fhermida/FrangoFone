@using FrangoFone.Models
<div class="jumbotron">
    <h1>Frango Fone</h1>
    <p class="lead">Veja abaixo suas vendas diárias:</p>
    <table class="table">
        @if (ViewBag.ListaVendasDiarias != null)
        {
            <tr>
                <th>Data Vendas</th>
                <th>Qtd Pedidos</th>
                <th>Total Vendas</th>
            </tr>
            foreach (VendaDiariaViewModel item in ViewBag.ListaVendasDiarias)
            {
            <tr>
                <td>@item.DataVendas.ToString("dd/MM/yyyy")</td>
                <td>@item.QuantidadePedidos</td>
                <td>@item.ValorDiario.ToString("#.#,0")</td>
            </tr>
            }
        }
    </table>
    <p><a href="~/pedidocliente/Index" class="btn btn-primary btn-lg">Mais Detalhes</a></p>
</div>
